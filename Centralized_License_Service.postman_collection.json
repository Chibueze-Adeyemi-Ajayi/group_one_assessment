                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "customer-lookup",
                                ""
                            ],
                            "query": [
                                {
                                    "key": "email",
                                    "value": "user@example.com"
                                }
                            ]
                        },
                        "description": "Admin/Brand lookup to find all license keys belonging to a specific email."
                    },
                    "response": []
