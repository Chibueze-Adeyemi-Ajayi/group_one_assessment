{
    "info": {
        "_postman_id": "7a3b1d2e-4c5f-6a7b-8c9d-0e1f2a3b4c5d",
        "name": "Centralized License Service",
        "description": "API collection for group.one License Service assessment. Includes Auth, Brand Management, and License lifecycle.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Obtain Token",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.access) {",
                                    "    pm.collectionVariables.set(\"access_token\", jsonData.access);",
                                    "    pm.collectionVariables.set(\"refresh_token\", jsonData.refresh);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/token/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "token",
                                ""
                            ]
                        },
                        "description": "Obtain JWT Access and Refresh tokens."
                    },
                    "response": []
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/token/refresh/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "token",
                                "refresh",
                                ""
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
