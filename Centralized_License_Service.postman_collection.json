                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/status/:key/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "status",
                                ":key",
                                ""
                            ],
                            "variable": [
                                {
                                    "key": "key",
                                    "value": "your-uuid-here"
                                }
                            ]
                        },
                        "description": "Returns full license key details and all associated product entitlements."
