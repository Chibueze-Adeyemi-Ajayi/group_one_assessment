        {
            "name": "Licenses",
            "item": [
                {
                    "name": "Provision License",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"brand_slug\": \"wp-rocket\",\n    \"product_slug\": \"rocket-cache\",\n    \"customer_email\": \"user@example.com\",\n    \"total_seats\": 3,\n    \"expiration_days\": 365\n}",
