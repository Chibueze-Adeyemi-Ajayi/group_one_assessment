                    },
                    "response": []
                },
                {
                    "name": "Activate License",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"license_key\": \"your-uuid-here\",\n    \"product_slug\": \"rocket-cache\",\n    \"instance_id\": \"https://mysite.com\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
